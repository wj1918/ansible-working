%sysops {{ ansible_default_ipv4.address }} = (ALL) ALL
Host_Alias WEBSERVERS = {{ groups['web'] | map('extract', hostvars, ['ansible_default_ipv4', 'address']) | list | join(', ') }}
Host_Alias DBSERVERS = {{ groups['database'] | map('extract', hostvars, ['ansible_default_ipv4', 'address']) | list | join(', ') }}
%httpd WEBSERVERS = /bin/su - webuser
%dba DBSERVERS = /bin/su - dbuser